<div class="container">
  <h1 class='mt-2'>Categories</h1>

    <% @categories.each do |category| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.alwaysonpurpose.com/wp-content/uploads/2019/11/happypeople-1024x679.jpg)">
        <p>
          <%= link_to category.capitalize, book_category_path(category: category), class:'text-decoration-none text-white text-uppercase' %>
        </p>
      </div>
    <% end %>

</div>
